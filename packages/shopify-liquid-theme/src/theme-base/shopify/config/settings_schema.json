  {
    "name": "Form Inputs",
    "settings": [
      {
        "type": "header",
        "content": "Input"
      },
      {
        "type": "paragraph",
        "content": "Select input style from list of available colors."
      },
      {
        "type": "select",
        "id": "input_text_color",
        "label": "Text",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-grey-900"
      },
      {
        "type": "select",
        "id": "input_placeholder_color",
        "label": "Placeholder",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-grey-500"
      },
      {
        "type": "select",
        "id": "input_border_color_default",
        "label": "Border (default)",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-grey-300"
      },
      {
        "type": "select",
        "id": "input_border_color_hover",
        "label": "Border (hover)",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-grey-900"
      },
      {
        "type": "select",
        "id": "input_outline_color",
        "label": "Outline",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-util-red"
      },
      {
        "type": "select",
        "id": "input_error_color",
        "label": "Error",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-util-red",
        "info": "Error color - when input failed validations."
      },
      {
        "type": "header",
        "content": "Disabled State"
      },
      {
        "type": "paragraph",
        "content": "Select style when form inputs are disabled."
      },
      {
        "type": "select",
        "id": "input_disabled_border",
        "label": "Border (disabled)",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-grey-200"
      },
      {
        "type": "select",
        "id": "input_disabled_background",
        "label": "Background (disabled)",
        "options": <%- uikit.colorsAll -%>,
        "default": "--color-grey-100"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font families"
      },
      {
        "type": "paragraph",
        "content": "Select primary, secondary fonts globally. These fonts are later used on global sections as settings."
      },
      {
        "type": "select",
        "id": "primary_font",
        "label": "Primary font",
        "options": <%- uikit.fonts -%>,
        "default": "'canada-type-gibson', sans-serif"
      },
      {
        "type": "select",
        "id": "secondary_font",
        "label": "Secondary font",
        "options": <%- uikit.fonts -%>,
        "default": "'mono', monospace"
      },
      {
        "type": "header",
        "content": "H1 sizes"
      },
      {
        "type": "range",
        "id": "display_desktop_size",
        "label": "Display size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 89
      },
      {
        "type": "range",
        "id": "display_mobile_size",
        "label": "Display size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 38
      },
      {
        "type": "range",
        "id": "h1_desktop_size",
        "label": "H1 size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 67
      },
      {
        "type": "range",
        "id": "h1_mobile_size",
        "label": "H1 size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 33
      },
      {
        "type": "header",
        "content": "H2 sizes"
      },
      {
        "type": "range",
        "id": "h2_desktop_size",
        "label": "H2 size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 50
      },
      {
        "type": "range",
        "id": "h2_mobile_size",
        "label": "H2 size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 28
      },
      {
        "type": "header",
        "content": "H3 sizes"
      },
      {
        "type": "range",
        "id": "h3_desktop_size",
        "label": "H3 size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 37
      },
      {
        "type": "range",
        "id": "h3_mobile_size",
        "label": "H3 size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 25
      },
      {
        "type": "header",
        "content": "H4 sizes"
      },
      {
        "type": "range",
        "id": "h4_desktop_size",
        "label": "H4 size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 28
      },
      {
        "type": "range",
        "id": "h4_mobile_size",
        "label": "H4 size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 23
      },
      {
        "type": "header",
        "content": "H5 sizes"
      },
      {
        "type": "range",
        "id": "h5_desktop_size",
        "label": "H5 size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 19
      },
      {
        "type": "range",
        "id": "h5_mobile_size",
        "label": "H5 size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 21
      },
      {
        "type": "header",
        "content": "H6 sizes"
      },
      {
        "type": "range",
        "id": "h6_desktop_size",
        "label": "H6 size (desktop)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 15
      },
      {
        "type": "range",
        "id": "h6_mobile_size",
        "label": "H6 size (mobile)",
        "min": 12,
        "max": 100,
        "unit": "px",
        "default": 14
      },
      {
        "type": "header",
        "content": "Font sizes"
      },
      {
        "type": "paragraph",
        "content": "Font size(large, base, small & tiny) are later used on global sections as settings."
      },
      {
        "type": "range",
        "id": "font_size_lage",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Font size (large)",
        "default": 18
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Font size (base)",
        "default": 16
      },
      {
        "type": "range",
        "id": "font_size_small",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Font size (small)",
        "default": 13
      },
      {
        "type": "range",
        "id": "font_size_x_small",
        "min": 10,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Font size (x-small)",
        "default": 12
      }
    ]
  },
