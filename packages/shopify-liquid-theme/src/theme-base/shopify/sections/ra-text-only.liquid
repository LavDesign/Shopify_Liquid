{% liquid
  assign title_level = section.settings.title_level

  assign cta_1_text = section.settings.cta_1_text
  assign cta_1_url = section.settings.cta_1_url
  assign cta_1_style = section.settings.cta_1_style

  assign cta_2_text = section.settings.cta_2_text
  assign cta_2_url = section.settings.cta_2_url
  assign cta_2_style = section.settings.cta_2_style

  assign enable_cta_1 = false
  assign enable_cta_2 = false

  if cta_1_text != blank and cta_1_url != blank
    assign enable_cta_1 = true
  endif

  if cta_2_text != blank and cta_2_url != blank
    assign enable_cta_2 = true
  endif
%}

{% style %}
  #shopify-section-{{- section.id -}} {
  --component-bg-color: var({{- section.settings.bg_color -}});
  --component-bg-color-md: var({{- section.settings.bg_color_md -}});
  --component-fg-color: var({{- section.settings.text_color_mobile -}});
  --component-fg-color-md: var({{- section.settings.text_color_desktop -}});
  }
{% endstyle %}

<article class="ra-text-only-banner set--spacing-top-{{ section.settings.spacing_top }} set--spacing-bottom-{{ section.settings.spacing_bottom }} gutter--{{ section.settings.spacing_edge }}">
  <div class="ra-text-only-banner__details max-width--{{ section.settings.max_width }}">
    <div class="ra-text-only-banner__copy set--h-align-{{ section.settings.horizontal_align }}-sm set--h-align-{{ section.settings.horizontal_align_md }}-md">
      {% if section.settings.eyebrow_text != blank %}
        <div class="ra-text-only-banner__subtitle">{{- section.settings.eyebrow_text -}}</div>
      {% endif %}

      {% if section.settings.title != blank %}
        <{{ title_level }} class="ra-title ra-text-only-banner__title {{ section.settings.title_style }}">
          {{ section.settings.title }}
        </{{ title_level }}>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="ra-text-only-banner__description {{ section.settings.description_copy_size }} rte">
          {{- section.settings.description -}}
        </div>
      {% endif %}

      {% if enable_cta_1 or enable_cta_2 %}
        <div class="ra-link-list ra-text-only-banner__link-list">
          {% if enable_cta_1 %}
            {% render 'ra-button',
              type: 'a',
              style: cta_1_style,
              url: cta_1_url,
              label: cta_1_text,
              class: 'ra-link-list min-w-[175px]'
            %}
          {% endif %}
          {% if enable_cta_2 %}
            {% render 'ra-button',
              type: 'a',
              style: cta_2_style,
              url: cta_2_url,
              label: cta_2_text,
              class: 'ra-link-list min-w-[175px]'
            %}
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</article>

