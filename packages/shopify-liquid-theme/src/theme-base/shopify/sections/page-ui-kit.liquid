                <option
                  tabindex="0"
                  class="ra-select__option"
                  value="2">2</option>
                <option
                  tabindex="0"
                  class="ra-select__option"
                  value="3">3</option>
              </select>
              <span aria-hidden="true" class="ra-select__arrow ra-icon ra-icon--md">
                <svg viewBox="0 0 24 24" class="ra-icon-path">
                    <path d="m15.924 16-4.59-4.58L6.744 16l-1.41-1.41 6-6 6 6-1.41 1.41Z" fill=""></path>
                </svg>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {%- comment -%}
    form - checkbox & toggle
    {%- endcomment -%}
    <div class="br-grid grid--col-3">
      <div>
        <p class="text-h5 mt-10 mb-5">Checkbox</p>
        {%- render 'checkbox' id: 'checkobx_1', style: 'classic', label: 'default' -%}
        <br>
        {%- render 'checkbox' id: 'checkobx_2', style: 'classic', label: 'checked', checked: true -%}
        <br>
        {%- render 'checkbox' id: 'checkobx_2', style: 'classic', label: 'disabled', disabled: true -%}
        <br>
        {%- render 'checkbox' id: 'checkobx_2', style: 'classic', label: 'message', message: 'This is info message.' -%}
      </div>
      <div>
        <p class="text-h5 mt-10 mb-5">Toggle</p>
        {%- render 'checkbox' id: 'toggle_1', style: 'toggle', label: 'default' -%}
        <br>
        {%- render 'checkbox' id: 'toggle_2', style: 'toggle', label: 'checked', checked: true -%}
        <br>
        {%- render 'checkbox' id: 'toggle_2', style: 'toggle', label: 'disabled', disabled: true -%}
        <br>
        {%- render 'checkbox' id: 'toggle_2', style: 'toggle', label: 'message', message: 'This is info message.' -%}
      </div>
      <div>
        <p class="text-h5 mt-10 mb-5">Radio</p>
        {%- render 'radio', label: 'default', id: 'default_radio' -%}
        <br>
        {%- render 'radio', label: 'checked', id: 'checked_radio', checked: true -%}
        <br>
        {%- render 'radio', label: 'disabled', id: 'disabled_radio', disabled: true -%}
        <br>
        {%- render 'radio', label: 'message', id: 'message_radio', message: 'This is info message.' -%}
      </div>
    </div>

    <hr class="border my-20">
    {%- comment -%}
    Icons
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Icons</h4>
    <p class="mb-2">
      Icons compile using Gulp. You can find all icon files in
      <code>src/THEME_FOLDER/icons/*.svg</code>. Icons are injected into
      <code>src/THEME_FOLDER/icon-store.liquid</code>
      which is rendered in
      <code>src/THEME_FOLDER/shopify/layout/theme.liquid</code>.
    </p>
    <div class="br-grid grid--col-4">
      <div>
        <p class="mt-10 mb-8">small <br><span class="text-xs">size: 'sm'</span>
        </p>
        {%- render 'icon' icon: 'account', size: 'sm' -%}
      </div>
      <div>
        <p class="mt-10 mb-8">medium <br><span class="text-xs">size: 'md'</span>
        </p>
        {%- render 'icon' icon: 'account', size: 'md' -%}
      </div>
      <div>
        <p class="mt-10 mb-8">large <br><span class="text-xs">size: 'lg'</span>
        </p>
        {%- render 'icon' icon: 'account', size: 'lg' -%}
      </div>
      <div>
        <p class="mt-10 mb-8">x-large <br><span class="text-xs">size: 'xl'</span>
        </p>
        {%- render 'icon' icon: 'account', size: 'xl' -%}
      </div>
      <div>
        <p class="mt-10 mb-8">custom size <br><span class="text-xs">width: 50px, height: 50px</span>
        </p>
        {%- render 'icon' icon: 'account', width: '50px', height: '50px' -%}
      </div>
      <div>
        <p class="mt-10 mb-8">custom color <br><span class="text-xs">#C4952B</span>
        </p>
        {%- render 'icon' icon: 'account', width: '50px', height: '50px' color: '#C4952B' -%}
      </div>
      <div>
        <p class="mt-10 mb-8">custom color <br><span class="text-xs">var(--color-primary-900)</span>
        </p>
        {%- render 'icon' icon: 'account', width: '50px', height: '50px' color: 'var(--color-primary-900)' -%}
      </div>
    </div>

    <hr class="border my-20">
    {%- comment -%}
    Accordions
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Accordions</h4>
    <p class="mt-8 text-h5">no icon</p>
    <div class="br-grid">
      {% render 'accordion'
        item1_title: 'Heading 1',
        item1_content: 'Content for <strong>heading 1</strong> as <em>HTML</em>.',
        item2_title: 'Heading 2'
        item2_content: 'Content for <strong>heading 2</strong> as <em>HTML</em>.'
      %}

      <p class="mt-8 text-h5">with icon</p>
      {% render 'accordion'
        show_icon: true,
        item1_title: 'Heading 1',
        item1_content: 'Content for <strong>heading 1</strong> as <em>HTML</em>.',
        item2_title: 'Heading 2',
        item2_content: 'Content for <strong>heading 2</strong> as <em>HTML</em>.'
      %}

      <p class="mt-8 text-h5">allow multiple items open</p>
      {% render 'accordion'
        show_icon: true,
        multiple_open: true,
        item1_title: 'Heading 1',
        item1_content: 'Content for <strong>heading 1</strong> as <em>HTML</em>.',
        item2_title: 'Heading 2',
        item2_content: 'Content for <strong>heading 2</strong> as <em>HTML</em>.'
      %}

      <p class="mt-8 text-h5">first item open</p>
      {% render 'accordion'
        show_icon: true,
        first_item_open: true,
        item1_title: 'Heading 1',
        item1_content: 'Content for <strong>heading 1</strong> as <em>HTML</em>.',
        item2_title: 'Heading 2',
        item2_content: 'Content for <strong>heading 2</strong> as <em>HTML</em>.'
      %}
    </div>

    <hr class="border my-20">
    {%- comment -%}
    Breadcrumbs
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Breadcrumbs</h4>
    {% render 'breadcrumbs', divider: 'slash' %}

    <hr class="border my-20">
    {%- comment -%}
    Scrollable
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Scrollable</h4>
    {% capture scrollable_content %}
      <div>
        <ul>
          <li>One</li>
          <li>Two</li>
          <li>Three</li>
          <li>Four</li>
          <li>Five</li>
          <li>Six</li>
        </ul>
      </div>
    {% endcapture %}
    {% render 'scrollable', expandLabel: 'EXPAND', content: scrollable_content, maxHeight: '4rem' %}

    <hr class="border my-20">
    {%- comment -%}
    Badge
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Badges</h4>
    <div class="mb-5">
      {% render 'badge'
        label: 'Primary',
        size: 'md'
        style: 'primary'
      %}
    </div>
    <div class="mb-5">
      {% render 'badge'
        label: 'Secondary sm',
        size: 'sm'
        style: 'secondary'
      %}
    </div>
    <div class="mb-5">
      {% render 'badge'
        label: 'Tertiary Notification Lg',
        size: 'lg'
        style: 'tertiary'
        rounded: true
      %}
    </div>

    <hr class="border my-20">
    {%- comment -%}
    Icon Tile
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Icon Tile</h4>
    {% assign img_src = section.settings.featured_product.featured_image.src | img_url: '300x' %}
    {% assign img_alt = section.settings.featured_product.featured_image.alt %}
    {% assign link_url = section.settings.featured_product.url %}
    <div class="br-grid grid--col-2 mb-5">
      {% render 'ra-icon-tile',
        imgSrc: img_src,
        imgAlt: img_alt,
        title: "This is a Title",
        description: "I'm not thinking about anything when I'm climbing."
        detailsLocation: 'after',
        stacked: true,
        linkUrl: link_url,
        linkText: "Default"
        horizontalAlign: 'right'
      %}
      {% render 'ra-icon-tile',
        imgSrc: img_src,
        imgAlt: img_alt,
        imgWidth: 200,
        title: "This is a Title",
        description: "I'm not thinking about anything when I'm climbing.",
        stacked: false,
        linkUrl: link_url,
        linkText: "Default",
        horizontalAlign: "left",
        horizontalAlignMD: "center"
        verticalAlign: 'bottom'
      %}
    </div>

    <hr class="border my-20">
    {%- comment -%}
    Notification
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Notification</h4>
    {%- render 'notification',
      icon: 'account',
      title: 'Account Notification',
      message: 'My account notification.',
      class: 'ra-notification__icon'
    -%}

    <hr class="border my-20">
    {%- comment -%}
      Modal
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Modal</h4>
    {% capture content %}
      <form action="">
        <div class="flex flex-col">
          {%- render 'input' type: 'text', size: 'md', placeholder: 'first name', label: 'first name', class: 'mb-3' -%}
          {%- render 'input' type: 'text', size: 'md', placeholder: 'last name', label: 'last name', class: 'mb-3' -%}
          {%- render 'button' type: 'button', style: 'primary', size: 'sm', label: 'Send' -%}
        </div>
      </form>
    {% endcapture %}
    {% render 'modal' id: 'modal-1', title: 'Modal Title', content: content %}
    {% render 'button' type: 'button', style: 'primary', label: 'open modal', id: 'modal-1' %}

    <hr class="border my-20">
    {%- comment -%}
    Tabs
    {%- endcomment -%}
    <h4 class="text-h4 mt-10 mb-5">Tabs</h4>
    {% capture tabs %}
      <div class="ra-tab">
        {% render 'button' type: 'button', style: 'secondary', class: 'ra-tab__toggle', label: 'Description', icon: 'chevron-down' %}
        <div class="ra-tab__content">
          <div class="ra-tab__content-inner">
            <strong>Description</strong>
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </div>
      <div class="ra-tab">
        {% render 'button' type: 'button', style: 'secondary', class: 'ra-tab__toggle', label: 'Read reviews', icon: 'chevron-down' %}
        <div class="ra-tab__content">
          <div class="ra-tab__content-inner">
            <strong>Read reviews</strong>
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </div>
      <div class="ra-tab">
        {% render 'button' type: 'button', style: 'secondary', class: 'ra-tab__toggle', label: 'Additional Information', icon: 'chevron-down' %}
        <div class="ra-tab__content">
          <div class="ra-tab__content-inner">
            <strong>Additional Information</strong>
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </div>
    {% endcapture %}
    {% render 'tabs'
      tabs: tabs,
      layout: 'default',
      center: false,
      stack_mobile: true
    %}
    <hr class="border my-20">
    {%- comment -%}
    Content Tiles
    {%- endcomment -%}
    {% assign videoUrl = section.settings.video_url %}
    <h4 class="text-h4 mt-10 mb-5">Content Tiles</h4>
    <div style="max-width: 22rem;">
      {% render 'ra-content-tile'
        src: img_src,
        alt: img_alt,
        title: 'This is a title',
        description: "I'm not thinking about anything when I'm climbing.",
        link_url_1: link_url,
        link_text_1: "Default",
        link_url_2: link_url,
        link_text_2: "Secondary",
        width: 400,
        height: 300
      %}
    </div>
    <hr class="border my-20">
    <h4 class="text-h4 mt-10 mb-5">Content Tiles (video)</h4>
    <div style="max-width: 22rem;">
      {% render 'ra-content-tile'
        src: img_src,
        alt: img_alt,
        title: 'This is a title',
        description: "I'm not thinking about anything when I'm climbing.",
        link_url_1: link_url,
        link_text_1: "Default",
        link_url_2: link_url,
        link_text_2: "Secondary",
        width: 400,
        height: 300,
        video: videoUrl
      %}
    </div>
    <hr class="border my-20">
  </div>
</section>

{%- schema -%}
  {
    "name": "UI-Kit Settings",
    "settings": [
      {
        "type": "product",
        "id": "featured_product",
        "label": "Featured Product"
      },
      {
        "type": "text",
        "id": "video_url",
        "label": "A Shopify-hosted video"
      }
    ]
  }
{%- endschema -%}
