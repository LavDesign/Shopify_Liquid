      </div>
    {% endcapture %}
    {% render 'ra-tabs', tabs: tabs, tabContent: tabContent %}
    <hr class="border my-20">
    {%- comment -%}
      Content Tiles
    {%- endcomment -%}
    {% assign videoUrl = section.settings.video_url %}
    <h4 class="text-h4 mt-10 mb-5">Content Tiles</h4>
    <div style="max-width: 22rem;">
      {% render 'ra-content-tile',
        src: img_src,
        alt: img_alt,
        title: 'This is a title',
        description: "I'm not thinking about anything when I'm climbing.",
        link_url_1: link_url,
        link_text_1: 'Default',
        link_url_2: link_url,
        link_text_2: 'Secondary',
        width: 400,
        height: 300
      %}
    </div>
    <hr class="border my-20">
    <h4 class="text-h4 mt-10 mb-5">Content Tiles (video)</h4>
    <div style="max-width: 22rem;">
      {% render 'ra-content-tile',
        src: img_src,
        alt: img_alt,
        title: 'This is a title',
        description: "I'm not thinking about anything when I'm climbing.",
        link_url_1: link_url,
        link_text_1: 'Default',
        link_url_2: link_url,
        link_text_2: 'Secondary',
        width: 400,
        height: 300,
        video: videoUrl
      %}
    </div>
    <hr class="border my-20">
  </div>
</section>

