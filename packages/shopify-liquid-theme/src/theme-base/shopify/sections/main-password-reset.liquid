<div class="customer login ra-container set--spacing-top-large set--spacing-bottom-large gutter--regular max-w-[428px] mx-auto">
  <ra-account-auth>
    <h3 class="text-center font-light mb-8 md:mb-14 text-grey-600">Reset Account Password</h3>
    {% form 'reset_customer_password', validate: 'novalidate' %}
      <p class="font-light mb-4">Enter a new password</p>
      <div class="grid gap-4 md:gap-6 grid-cols-1">
        <div class="ra-grid-item">
          <div class="ra-input">
            <label class="font-secondary text-sm text-tertiary-900 mb-1" for="CustomerPassword">
              {{ 'customer.login_page.password' | t }}
            </label>
            <div class="ra-input__wrapper">
              <input
                class="ra-input__control ra-input__control--text peer"
                type="password"
                value=""
                name="customer[password]"
                id="CustomerPassword"
                autocomplete="current-password"
                data-required
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login_page.password' | t }}"
              >
              <span class="hidden text-sm font-light text-red mt-1 peer-[.border-red]:flex"
                >Please enter a password.</span
              >
            </div>
          </div>
        </div>

        <!-- Password -->
        <div class="ra-grid-item">
          <div class="ra-input">
            <label class="font-secondary text-sm text-tertiary-900 mb-1" for="CustomerPassword">
              Confirm Password
            </label>
            <div class="ra-input__wrapper">
              <input
                class="ra-input__control ra-input__control--text peer"
                type="password"
                value=""
                name="customer[password_confirmation]"
                id="CustomerPassword"
                autocomplete="current-password"
                data-required
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login_page.password' | t }}"
              >
              <span class="hidden text-sm font-light text-red mt-1 peer-[.border-red]:flex"
                >Please enter a password.</span
              >
            </div>
          </div>
        </div>
        <button
          class="ra-button ra-button--primary ra-button--full-width ra-button--lg text-center"
          data-cy="login-btn_submit"
        >
          Reset Password
        </button>
      </div>
    {% endform %}
  </ra-account-auth>
</div>
