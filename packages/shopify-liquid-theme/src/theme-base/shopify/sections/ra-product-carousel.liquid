    {
      "type": "select",
      "id": "scroll_interaction",
      "label": "Scroll Interaction",
      "options": [
        {
          "value": "free",
          "label": "Free Scroll"
        },
        {
          "value": "snap",
          "label": "Snap to slides"
        }
      ],
      "default": "snap"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "mobile_padding_vertical",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "unit": "rem",
      "label": "Mobile Padding Vertical (rem)",
      "default": 1
