    {
      "type": "range",
      "id": "mobile_margin",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "unit": "rem",
      "label": "Mobile Margin (rem)",
      "default": 2
    },
    {
      "type": "range",
      "id": "desktop_margin",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "unit": "rem",
      "label": "Desktop Margin (rem)",
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "product-slide",
      "name": "Product Slide",
      "limit": 12,
      "settings": [
        {
          "type": "header",
          "content": "Slide Content"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
