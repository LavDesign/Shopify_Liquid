{{ 'customer.css' | asset_url | stylesheet_tag }}

<section class="customer account account-page ra-container set--spacing-top-large set--spacing-bottom-large gutter--regular max-width--xmedium">
  <div class="ra-row">
    <div class="basis-full md:basis-1/4">
      {% render 'ra-account-navigation' %}
    </div>

    <div class="basis-full md:basis-3/4">
      <div class="flex flex-wrap relative mb-10">
        <h3 class="h3 color-grey-900 !font-[300]">
          {{ 'customer.orders.title' | t }}
        </h3>
      </div>

      {% paginate customer.orders by 20 %}
        {%- if customer.orders.size > 0 -%}
          <table role="table" class="w-full border-none border-spacing-0">
            <caption class="visually-hidden">
              {{ 'customer.orders.title' | t }}
            </caption>
            <thead role="rowgroup">
              <tr class="ra-table__heading border-b text-base py-4 px-0 flex flex-wrap items-center" role="row">
                <th
                  class="flex-1 leading-[1.3] p-0 text-left"
                  id="ColumnOrder"
                  scope="col"
                  role="columnheader">
                  {{ 'customer.orders.order_number' | t }}
                </th>
                <th
                  class="flex-1 leading-[1.3] p-0 text-left"
                  id="ColumnDate"
                  scope="col"
                  role="columnheader">
                  {{ 'customer.orders.date' | t }}
                </th>
                <th
                  class="flex-1 leading-[1.3] p-0 text-left"
                  id="ColumnFulfillment"
                  scope="col"
                  role="columnheader">
                  {{ 'customer.orders.fulfillment_status' | t }}
                </th>
                <th
                  class="flex-1 leading-[1.3] p-0 text-left"
                  id="ColumnTotal"
                  scope="col"
                  role="columnheader">
                  {{ 'customer.orders.total' | t }}
                </th>
              </tr>
            </thead>
            <tbody role="rowgroup">
              {%- for order in customer.orders -%}
                <tr class="border-b py-7 text-xs md:text-lg flex flex-wrap items-center relative font-[300]" role="row">
                  <td
                    class="flex-1 leading-normal p-0 text-left underline"
                    id="RowOrder"
                    role="cell"
                    headers="ColumnOrder"
                    data-label="{{ 'customer.orders.order_number' | t }}">
                    {{ order.name }}
                  </td>
                  <td
                    class="flex-1 leading-normal p-0 text-left"
                    headers="RowOrder ColumnDate"
                    role="cell"
                    data-label="{{ 'customer.orders.date' | t }}">
                    {{ order.created_at | time_tag: format: 'date' }}
                  </td>
                  <td
                    class="flex-1 leading-normal p-0 text-left"
                    headers="RowOrder ColumnFulfillment"
                    role="cell"
                    data-label="{{ 'customer.orders.fulfillment_status' | t }}">
                    {{ order.fulfillment_status_label }}
                  </td>
                  <td
                    class="flex-1 leading-normal p-0 text-left flex justify-between items-center"
                    headers="RowOrder ColumnTotal"
                    role="cell"
                    data-label="{{ 'customer.orders.total' | t }}">
                    {{ order.total_price | money }}
                    <span class="hidden md:flex ra-icon ra-icon--lg md:mr-2">
                      {% render 'icon', icon: 'chevron-right', width: '10px', height: '16px' %}
                    </span>
                    <a href="{{ order.customer_url }}" class="h-full left-0 absolute top-0 w-full ra-link hover:opacity-25 hover:bg-grey-300">
                      <span class="sr-only">
                        View details for order {{ order.name }}
                      </span>
                    </a>
                  </td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        {%- else -%}
          <p>{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}

        {%- if paginate.pages > 1 -%}
          {%- if paginate.parts.size > 0 -%}
            <nav
              class="pagination"
              role="navigation"
              aria-label="{{ 'general.pagination.label' | t }}">
              <ul role="list">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        viewBox="0 0 10 6">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
                          fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                      {%- else -%}
                        <span>{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}

                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        viewBox="0 0 10 6">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
                          fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endif -%}
      {% endpaginate %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "t:sections.main-account.name",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}
