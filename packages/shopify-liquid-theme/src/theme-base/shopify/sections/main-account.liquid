{{ 'customer.css' | asset_url | stylesheet_tag }}

<section class="customer account account-page ra-container set--spacing-top-large set--spacing-bottom-large gutter--regular max-width--xmedium">
  <div data-row-gap="-sm,-md,-lg" class="ra-row" style="--row-gap:1rem; --row-gap-md:2rem; --row-gap-lg:5%;">
    <div data-col-size="-size,-md" class="ra-col" style="--col-size:100%; --col-size-md:25%;">
      {% render 'ra-account-navigation' %}
    </div>

    <div data-col-size="-size,-md" class="ra-col" style="--col-size:100%; --col-size-md:75%;">
      <div class="account-content__header pb-4">
        <h1 class="ra-title account-content__title" style="--title-font-size:var(--font-size-md30-to-lg20);">
          {{ 'customer.orders.title' | t }}
        </h1>
      </div>

      {% paginate customer.orders by 20 %}
        {%- if customer.orders.size > 0 -%}
          <table role="table" class="ra-table orders-list-table" style="--_table-column-width:2;">
            <caption class="visually-hidden">
              {{ 'customer.orders.title' | t }}
            </caption>
            <thead role="rowgroup">
              <tr class="ra-table__heading" role="row">
                <th
                  class="ra-table__header order-history-table__header"
                  id="ColumnOrder"
                  scope="col"
                  role="columnheader"
                >
                  {{ 'customer.orders.order_number' | t }}
                </th>
                <th
                  class="ra-table__header order-history-table__header"
                  id="ColumnDate"
                  scope="col"
                  role="columnheader"
                >
                  {{ 'customer.orders.date' | t }}
                </th>
                <th
                  class="ra-table__header order-history-table__header"
                  id="ColumnFulfillment"
                  scope="col"
                  role="columnheader"
                >
                  {{ 'customer.orders.fulfillment_status' | t }}
                </th>
                <th
                  class="ra-table__header order-history-table__header"
                  id="ColumnTotal"
                  scope="col"
                  role="columnheader"
                >
                  {{ 'customer.orders.total' | t }}
                </th>
              </tr>
            </thead>
            <tbody class="order-history-table__row" role="rowgroup">
              {%- for order in customer.orders -%}
                <tr class="ra-table__row" role="row">
                  <td
                    class="ra-table__data order-history-table__order-number"
                    id="RowOrder"
                    role="cell"
                    headers="ColumnOrder"
                    data-label="{{ 'customer.orders.order_number' | t }}"
                  >
                    {{ order.name }}
                  </td>
                  <td
                    class="ra-table__data data-order-date"
                    headers="RowOrder ColumnDate"
                    role="cell"
                    data-label="{{ 'customer.orders.date' | t }}"
                  >
                    {{ order.created_at | time_tag: format: 'date' }}
                  </td>
                  <td
                    class="ra-table__data data-order-status"
                    headers="RowOrder ColumnFulfillment"
                    role="cell"
                    data-label="{{ 'customer.orders.fulfillment_status' | t }}"
                  >
                    {{ order.fulfillment_status_label }}
                  </td>
                  <td
                    class="ra-table__data flex justify-between items-center"
                    headers="RowOrder ColumnTotal"
                    role="cell"
                    data-label="{{ 'customer.orders.total' | t }}"
                  >
                    {{ order.total_price | money_with_currency }}
                    <span class="order-history-table__row-chevron display--md ra-icon ra-icon--lg">
                      {% render 'icon', icon: 'chevron-right', width: '24px', height: '24px' %}
                    </span>
                    <a href="{{ order.customer_url }}" class="order-history-table__row-link ra-link">
                      <span class="sr-only"> View details for order {{ order.name }} </span>
                    </a>
                  </td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        {%- else -%}
          <p>{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}

        {%- if paginate.pages > 1 -%}
          {%- if paginate.parts.size > 0 -%}
            <nav class="pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
              <ul role="list">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                      {%- else -%}
                        <span>{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}

                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endif -%}
      {% endpaginate %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
