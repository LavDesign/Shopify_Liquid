{% liquid
  assign title       = section.settings.title
  assign pre_title   = section.settings.pre_title
  assign description = section.settings.description

  assign title_as    = section.settings.title_as
  assign title_level = section.settings.title_level

  assign carousel_nav_location = section.settings.carousel_nav_location
%}

{% capture slides %}
  {%- for block in section.blocks -%}
    {% liquid
      assign src    = block.settings.slide_img | img_url: '400x'
      assign alt    = block.settings.slide_img.alt
      assign title  = block.settings.slide_title
      assign description = block.settings.slide_description

      assign width  = block.settings.slide_image_width
      assign height = block.settings.slide_image_height
    %}
    <div class="ra-carousel-item swiper-slide">
      {% render 'content-tile'
        src: src,
        alt: alt,
        title: title,
        description: description,
        width: width,
        height: height,
        link_url_1: link_url,
        link_text_1: "Default",
        link_url_2: link_url,
        link_text_2: "Secondary"
      %}
    </div>
  {%- endfor -%}
{% endcapture %}

{% capture carouselLocation %}
  {% if carousel_nav_location == 'top' %}
    ra-carousel__nav--top-right
  {% else %}
    ra-carousel__nav--auto
  {% endif %}
{% endcapture %}

{% capture carousel_settings %}
  [
    {
      "type": "Test",
      "nav_position": {{ carousel_nav_location }}
    }
  ]
{% endcapture %}

<section class="ra-carousel-outer" id="content-carousel__{{ section.id }}">
  <div class="ra-heading ra-carousel__details" style="--heading-margin:var(--spacing-lg); --heading-text-align:left;">
    <{{ title_level }} class="ra-title ra-heading__title" style="--title-font-size:var(--font-size-{{ title_as }});">
      {% if title != blank %}
        <div>{{- title -}}</div>
      {% endif %}
    </{{ title_level }}>
    {% if description != blank %}
      <div class="ra-heading__description">
        {{- description -}}
      </div>
    {% endif %}
  </div>
  <!-- Carousel -->
  <div class="ra-carousel {% if section.settings.show_navigation %}ra-carousel--has-nav {{ carouselNavStyles }}{% endif %}">
    {% if section.settings.show_navigation %}
      <div class="ra-carousel__nav ra-carousel__nav--top-right">
        {% render 'icon-button' type: 'button', class: 'ra-carousel__nav-cta ra-carousel__nav-cta--prev', style: 'tertiary', size: 'sm', label: 'Go to previous slide', icon: 'arrow-left' %}

        {% render 'icon-button' type: 'button', class: 'ra-carousel__nav-cta ra-carousel__nav-cta--next', style: 'tertiary', size: 'sm', label: 'Go to next slide', icon: 'arrow-right' %}
      </div>
    {% endif %}
    <div data-vue-root="ContentCarousel">
      <content-carousel
      :options="{{ carousel_settings | escape | strip_newlines }}">
        {{ slides }}
      </content-carousel>
    </div>
  </div>
</section>

