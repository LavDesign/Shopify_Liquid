{% style %}
  [data-section-id='{{ section.id }}'] {
    --section-divider-bg-color: var({{ section.settings.bg_color }});
    --section-divider-color: var({{ section.settings.divider_color }});
    --section-divider-desktop-padding-top: {{ section.settings.desktop_padding_top | append: "px" }};
    --section-divider-desktop-padding-bottom: {{ section.settings.desktop_padding_bottom | append: "px" }};
    --section-divider-mobile-padding-top: {{ section.settings.mobile_padding_top | append: "px" }};
    --section-divider-mobile-padding-bottom: {{ section.settings.mobile_padding_bottom | append: "px" }};
  }

  [data-section-id='{{ section.id }}'].container {
    background-color: var(--section-divider-bg-color);
    padding-top: var(--section-divider-desktop-padding-top);
    padding-bottom: var(--section-divider-desktop-padding-bottom);
  }

  @media (max-width: 768px) {
    [data-section-id='{{ section.id }}'].container {
      padding-top: var(--section-divider-mobile-padding-top);
      padding-bottom: var(--section-divider-mobile-padding-bottom);
    }
  }  

  [data-section-id='{{ section.id }}'] .divider {
    background-color: var(--section-divider-color);
  }
{% endstyle %}

<section>
  <div class="container" data-section-id="{{ section.id }}">
    <div class="divider"></div>
  </div>
</section>

{% schema %}
{
  "name": "Divider",
  "class": "section-divider",
  "settings": [
    {
      "type": "select",
      "id": "bg_color",
      "label": "Background color",
      "options": <%- uikit.colorsCustomizer -%>
    },
    {
      "type": "select",
      "id": "divider_color",
      "label": "Divider color",
      "options": <%- uikit.colorsCustomizer -%>
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "desktop_padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding top (desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "desktop_padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom (desktop)",
      "default": 50
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding top (mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom (mobile)",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Divider"
    }
  ]
}
{% endschema %}
