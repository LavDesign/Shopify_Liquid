{% comment %}
  Props:
    id:       string unique ID - (required)
    name:     string input name (required)
    value:    string input value (required)
    label:    string checkbox label - (required)
    class:    string add custom CSS class - (optional)
    checked:  boolean - (optional)
    required: boolean - (optional)
    disabled: boolean - (optional)
{% endcomment %}

{% if id != blank and style != blank and label != blank %}
  {% capture classes %}
    ra-choice
    ra-choice--checkbox
    ra-choice--{{ style }}
    ra-choice--checkbox-{{ style }}
    {{ class }}
  {% endcapture %}

  {% assign label_handelize = label | handleize | prepend: '_' %}
  {% capture input_id %}
    {{ id | handleize | append: label_handelize }}
  {% endcapture %}

  {% capture attributes %}
    {% if required %}
      required="required"
    {% endif %}
    {% if disabled %}
      disabled="disabled"
    {% endif %}
    {% if checked %}
      checked="checked"
    {% endif %}
  {% endcapture %}

  <div class="ra-choice {{ classes }} ra-filter-button ra-swatch-filter">
    <input
      class="ra-choice__input"
      name="{{ name }}"
      value="{{ value }}"
      id="{{ input_id }}"
      type="checkbox"
      {{ attributes }}
    >
    <label class="ra-choice__container w-11 h-11 set--sibling-deep-focus border border-grey-400 p-0" for="{{ input_id }}">
      <img alt="{{ label }}" src="{{ label | downcase | append: '_swatch.png' | file_url }}" />
    </label>
  </div>
{% endif %}
