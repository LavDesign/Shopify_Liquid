<div class="account-navigation">
  <div class="mb-4 md:mb-10 flex justify-between">
    <p class="text-lg color-grey-900 capitalize font-[300]">Hello, {{ customer.first_name }}</p>
    <a href="{{ routes.account_logout_url }}" class="flex md:hidden">
      Logout
    </a>
  </div>

  <ul class="flex flex-col flex-nowrap overflow-auto whitespace-nowrap">
    <li class="max-md:mr-4 md:mb-4 leading-[1.3]">
      <a href="/account" class="text-sm md:text-lg font-[600] {% if request.path == "/account" or request.path contains "/account/orders" %}underline{% else %}no-underline{% endif %} color-current">
        Order History
      </a>
    </li>
    <li class="max-md:mr-4 md:mb-4 leading-[1.3]">
      <a href="{{ routes.account_addresses_url }}" class="text-sm md:text-lg font-[600] {% if request.path == "/account/addresses" %}underline{% else %}no-underline{% endif %} color-current">
        Address Book
      </a>
    </li>
    <li class="max-md:mr-4 md:mt-6 hidden md:flex leading-[1.3]">
      <a href="{{ routes.account_logout_url }}" class="text-sm md:text-lg font-[600] no-underline uppercase color-current">
        Logout
      </a>
    </li>
  </ul>
</div>
