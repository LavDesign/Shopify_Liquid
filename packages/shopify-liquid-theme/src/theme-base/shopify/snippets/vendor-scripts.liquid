{% comment %}
  Yotpo Script
{% endcomment %}

{% if settings.yotpo_app_key != blank and settings.review_platform == 'yotpo' %}
  <script type="text/javascript">
    (function e() {
      var e = document.createElement('script');
      (e.type = 'text/javascript'),
        (e.async = true),
        (e.src = '//staticw2.yotpo.com/{{ settings.yotpo_app_key }}/widget.js');
      var t = document.getElementsByTagName('script')[0];
      t.parentNode.insertBefore(e, t);
    })();
  </script>
{% endif %}

{% comment %}
  Stamped Script
{% endcomment %}

{% if settings.stamped_api_key != blank and settings.review_platform == 'stamped' %}
  <script
    async
    type="text/javascript"
    data-api-key="{{ settings.stamped_api_key }}"
    id="stamped-script-widget"
    src="https://cdn1.stamped.io/files/widget.min.js"
  ></script>
{% endif %}

{% comment %}
  Bazaarvoice Script
{% endcomment %}

{% if settings.bazaarvoice_client != blank
  and settings.bazaarvoice_id != blank
  and settings.bazaarvoice_env != blank
  and settings.review_platform == 'bazaarvoice'
%}
  <script
    src="https://apps.bazaarvoice.com/deployments/{{ settings.bazaarvoice_client }}/{{ settings.bazaarvoice_id }}/{{ settings.bazaarvoice_env }}/en_US/bv.js"
    async
    defer
  ></script>
{% endif %}

{% if settings.stamped_api_key != blank %}
  <script
    async
    type="text/javascript"
    data-api-key="{{ settings.stamped_api_key }}"
    id="stamped-script-widget"
    src="https://cdn1.stamped.io/files/widget.min.js"
  ></script>
{% endif %}