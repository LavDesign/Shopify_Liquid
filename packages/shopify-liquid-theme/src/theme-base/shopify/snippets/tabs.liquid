{% endcapture %}

{% render 'tabs'
tabs: tabs,
layout: 'default',
center: false,
stack_mobile: true
%}
{% endcomment %}

{% capture classes %}
  {% if center %}
    ra-tabs--center
  {% endif %}
  {% if layout == 'default' %}
    ra-tabs--default
  {% elsif layout == 'stack' %}
    ra-tabs--stack
  {% endif %}
{% endcapture %}

{% capture attributes %}
  {% if stack_mobile %}
    data-stack-mobile="true"
  {% endif %}
{% endcapture %}

{% if tabs != blank %}
  <ra-tabs class="ra-tabs ra-tabs--left {{ classes }}" {{ attributes }}>
    {{ tabs }}
  </ra-tabs>
{% endif %}

