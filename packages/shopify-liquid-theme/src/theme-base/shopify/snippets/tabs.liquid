{% endcapture %}

{% render 'tabs'
tabs: tabs,
layout: 'default',
center: false,
stack_mobile: true
%}
{% endcomment %}

{% capture classes %}
  {% if center %}
    ra-tabs--center
  {% endif %}
  {% if layout == 'default' %}
    ra-tabs--default
  {% elsif layout == 'stack' %}
    ra-tabs--stack
  {% endif %}
{% endcapture %}

{% capture attributes %}
  {% if stack_mobile %}
    data-stack-mobile="true"
  {% endif %}
{% endcapture %}

{% if tabs != blank %}
  <ra-tabs class="ra-tabs ra-tabs--left {{ classes }}" {{ attributes }}>
    {{ tabs }}
  </ra-tabs>
{% endif %}

<div class="pt-5">

  <style>
    .tab-panel:not(.hidden) {
      display: block;
    }
    .closing {
      animation-name: center-to-bottom;
      animation-duration: 0.5s;
    }
    .opening {
      animation-name: bottom-to-center;
      animation-duration: 0.5s;
    }
    @keyframes center-to-bottom {
      from {
        transform: translate(0, 0);
        opacity: 1;
      }
      to {
        transform: translate(0, -100%);
        opacity: 0;
      }
    }
    @keyframes bottom-to-center {
      from {
        transform: translate(0, -100%);
        opacity: 0;
      }
      to {
        transform: translate(0, 0);
        opacity: 1;
      }
    }
  </style>

