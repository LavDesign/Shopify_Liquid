{% comment %}

  Props:
    tabs:         string/html/markup tabs content - (required)
    layout:       string [default, stack] desktop - (required)
    center:       boolean - (optional)
    stack_mobile: boolean stack/accordion tabs on mobile - (optional)

  Example Tabs:
    {% capture tabs %}
      <div class="ra-tab">
        {% render 'button' type: 'button', style: 'secondary', class: 'ra-tab__toggle', label: 'Description', icon: 'chevron-down' %}
        <div class="ra-tab__content">
          <div class="ra-tab__content-inner">
            <strong>Description</strong>
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </div>
      <div class="ra-tab">
        {% render 'button' type: 'button', style: 'secondary', class: 'ra-tab__toggle', label: 'Read reviews', icon: 'chevron-down' %}
        <div class="ra-tab__content">
          <div class="ra-tab__content-inner">
            <strong>Read reviews</strong>
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </div>
      <div class="ra-tab">
        {% render 'button' type: 'button', style: 'secondary', class: 'ra-tab__toggle', label: 'Additional Information', icon: 'chevron-down' %}
        <div class="ra-tab__content">
          <div class="ra-tab__content-inner">
            <strong>Additional Information</strong>
            Lorem Ipsum is simply dummy text of the printing and typesetting industry.
          </div>
        </div>
      </div>
    {% endcapture %}

    {% render 'tabs' 
      tabs: tabs,
      layout: 'default',
      center: false,
      stack_mobile: true
    %}
{% endcomment %}

{% capture classes %}
  {% if center %}
    ra-tabs--center
  {% endif %}
  {% if layout == 'default' %}
    ra-tabs--default
  {% elsif layout == 'stack' %}
    ra-tabs--stack
  {% endif %}
{% endcapture %}

{% capture attributes %}
  {% if stack_mobile %} data-stack-mobile="true" {% endif %}
{% endcapture %}

{% if tabs != blank %}
  <ra-tabs class="ra-tabs ra-tabs--left {{ classes }}" {{ attributes }}>
    {{ tabs }}
  </ra-tabs>
{% endif %}