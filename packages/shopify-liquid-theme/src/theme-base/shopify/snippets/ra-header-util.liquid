{% if settings.util_link_1_url != blank
  or settings.util_link_2_url != blank
  or settings.util_link_3_url != blank
  or settings.intl_on
%}
  <ul class="ra-header-util !static flex flex-col list-none md:!absolute md:top-1/2 md:right-0 md:-translate-y-1/2 md:flex-row max-md:transform-none {% unless is_mobile %}hidden md:flex{% endunless %}">
    {% if settings.util_link_1_url != blank and settings.util_link_1_label != blank %}
      <li class="ra-header-util__item md:px-[10px] md:last:pr-0 {% if is_mobile %}p-0 mb-4 last:mb-0 {% endif %}">
        <a
          class="text-sm"
          title="{{ settings.util_link_1_label }}"
          aria-label="{{ settings.util_link_1_label }}"
          href="{{ settings.util_link_1_url }}"
        >
          {{ settings.util_link_1_label }}
        </a>
      </li>
    {% endif %}
    {% if settings.util_link_2_url != blank and settings.util_link_2_label != blank %}
      <li class="ra-header-util__item md:px-[10px] md:last:pr-0 {% if is_mobile %}p-0 mb-4 last:mb-0 {% endif %}">
        <a
          class="text-sm"
          title="{{ settings.util_link_2_label }}"
          aria-label="{{ settings.util_link_2_label }}"
          href="{{ settings.util_link_2_url }}"
        >
          {{ settings.util_link_2_label }}
        </a>
      </li>
    {% endif %}
    {% if settings.intl_on %}
      <div class="w-4 h-4">
        <button class="w-full h-full" id="intl-modal" label="open modal">
          {{ localization.country | image_url: width: 32, width: 32 | image_tag: class: 'rounded-full' }}
        </button>
      </div>
    {% endif %}
  </ul>
{% endif %}
