{% comment %}
  Props:
    id:       string unique ID, should start with 'modal-' - (required)
    title:    string modal title - (optional)
    content:  string/html/markup modal content - (required)
    classes:  string extra class names - (optional)
    overlay:  boolean, toggle modal overlay - (optional)

  Example:
    {% capture content %}
      <form action="">
        <div class="flex flex-col">
          {%- render 'input' type: 'text', size: 'md', placeholder: 'first name', label: 'first name', class: 'mb-3' -%}
          {%- render 'input' type: 'text', size: 'md', placeholder: 'last name', label: 'last name', class: 'mb-3' -%}
          {%- render 'button' type: 'button', style: 'primary', size: 'sm', label: 'Send' -%}
        </div>
      </form>
    {% endcapture %}

    {% render 'modal' id: 'modal-1', title: 'Modal Title', content: content %}
    {% render 'button' type: 'button', style: 'primary', label: 'open modal', id: 'modal-1' %}
{% endcomment %}

{% if id != blank %}
  <dialog data-dialog-id="{{ id }}" class="{{ classes }}">
    {% if overlay %}
      <div class="ra-overlay"></div>
    {% endif %}
    <div class="ra-modal__content">
      <div class="flex justify-between justify-items-center">
        {% if title != blank %}
          <h4 class="sr-only">{{ title }}</h4>
          <h4 class="h4">{{ title }}</h4>
        {% endif %}
        <form method="dialog" class="close-modal">
          {% render 'icon-button' type: 'button', value: 'close' style: 'tertiary', size: 'sm', label: 'close modal', icon: 'close', rounded: true %}
        </form>
      </div>
      {% if content != blank %}
        <div class="pt-3">
          {{ content }}
        </div>
      {% endif %}
    </div>
  </dialog>
{% endif %}
