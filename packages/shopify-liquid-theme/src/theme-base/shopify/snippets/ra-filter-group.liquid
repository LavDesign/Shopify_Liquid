{% comment %}

  Props:
    title:       string item title - (required)
    filter:      Shopify filter object - (required)
    as_buttons:  boolean - (option) Display filters as buttons instead of checkboxes
    show_icon:   boolean - (optional)
    is_open:     boolean - (optional)

{% endcomment %}
{% if filter.type == 'price_range' %}
  <div class="ra-range-slider mx-auto">
    {% assign min_start = filter.min_value.value | default: 0 | money_without_currency %}
    {% assign max_start = filter.max_value.value | default: filter.range_max | money_without_currency %}
    <ra-range-slider
      data-min="0"
      data-max="{{ filter.range_max | money_without_currency }}"
      data-min-start="{{ min_start }}"
      data-max-start="{{ max_start }}"
    >
      <div class="ra-slider"></div>
      <input type="hidden" id="PriceMin" name="{{ filter.min_value.param_name }}" value="{{ filter.min_value.value | money_without_currency }}">
      <input type="hidden" id="PriceMax" name="{{ filter.max_value.param_name }}" value="{{ filter.max_value.value | money_without_currency }}">
    </ra-range-slider>
  </div>
{% elsif display_as_buttons %}
  <div class="ra-option-picker ra-option-picker--grid">
    <div class="ra-option-picker__items flex flex-wrap gap-2">
      {%- for value in filter.values -%}
        {% assign checked = false %}
        {% if filter.active_values contains value %}
          {% assign checked = true %}
        {% endif %}
        {%- render 'filter-button'
          name: value.param_name,
          class: "ra-filter-input"
          id: value.param_name,
          checked: checked,
          value: value.value,
          label: value.label,
          style: 'classic'
        -%}
      {%- endfor -%}
    </div>
  </div>
{% else %}
  <ul class="list-none">
  {%- for value in filter.values -%}
    {% assign checked = false %}
    {% if filter.active_values contains value %}
      {% assign checked = true %}
    {% endif %}
    <li class="mb-3">
      {%- render 'checkbox'
        name: value.param_name,
        class: "ra-filter-input"
        id: value.param_name,
        checked: checked,
        value: value.value,
        label: value.label,
        style: 'classic'
      -%}
    </li>
  {%- endfor -%}
  </ul>
{% endif %}
