{% comment %}
  Props:
    label:           String add text to badge - (required)
    size:            String [xs, sm, md, lg] sizes - (optional)
    rounded:         Boolean, changes style of badge to rounded - (optional)
    class:           String add custom CSS class - (optional)
    style:           String, [primary, secondary, tertiary, success, warning, danger] - (optional) [default is 'primary']
    attributes:      String, add custom attributes

    Example Badge:
    {% render 'ra-badge', label: 'Out of Stock', size: 'md', style: 'danger' %}
{% endcomment %}

{% capture classes %}
  ra-badge
  {% if rounded %}
    ra-badge--notification
  {% else %}
    ra-badge--standard
  {% endif %}
  {% if label %}
    ra-badge--has-text
  {% endif %}
  {% if style %}
    ra-badge--{{ style }}
  {% else %}
    ra-badge--primary
  {% endif %}
  {% if size %}
    ra-badge--{{ size }}
  {% endif %}
  {{class}}
{% endcapture %}

{% if label != blank %}
  <div class="{{ classes }}" label="{{ label }}" {{ attributes }}>
    {{ label }}
  </div>
{% endif %}
